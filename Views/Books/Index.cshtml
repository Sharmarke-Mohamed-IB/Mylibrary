@model List<MyLibrary.Models.Book>

@{
    ViewData["Title"] = "Available Books";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row g-4">
    @foreach (var book in Model)
    {
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm rounded border-0 hover-shadow">
                <img src="@(string.IsNullOrEmpty(book.CoverImageUrl) 
                              ? "https://via.placeholder.com/300x400?text=No+Image" 
                              : Url.Content(book.CoverImageUrl))" 
                     class="card-img-top" 
                     alt="@book.Title" 
                     style="height:350px; object-fit:cover;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate" title="@book.Title">@book.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted text-truncate" title="@book.Author">@book.Author</h6>
                    <p class="card-text text-muted small">@book.Genre</p>
                    <a href="/Books/Details/@book.Id" class="btn btn-primary mt-auto">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .hover-shadow:hover {
        box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }
</style>
